<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_img"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:src="@mipmap/ic_launcher"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/home_button_top10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@null"
                    android:drawableTop="@mipmap/top_ten"
                    android:text="TOP10"/>
                <Button
                    android:id="@+id/home_button_youpinhui"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@null"
                    android:drawableTop="@mipmap/youpinhui"
                    android:text="优品汇"/>
                <Button
                    android:id="@+id/home_button_taoyoupin"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@mipmap/taoyoupin"
                    android:text="淘优品"/>
                <Button
                    android:id="@+id/home_button_guanghaohuo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:drawableTop="@mipmap/guanghaohuo"
                    android:text="逛好货"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#dddddd"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/home_exclusive"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_exclusive"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/home_ten"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@mipmap/home_ten"/>
                    <ImageView
                        android:id="@+id/home_next"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@mipmap/home_next"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="每日优选"/>
            <com.example.administrator.onezw.view.NoScrollListView
                android:id="@+id/home_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.example.administrator.onezw.view.NoScrollListView>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#55666666"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/home_richscan"
            android:layout_width="35dp"
            android:background="@drawable/btn_richscan"
            android:layout_height="35dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:background="#88bdbdbd">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/search"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索天猫/淘宝宝贝"
                android:textColor="#888888"/>
        </LinearLayout>
        <Button
            android:id="@+id/home_sign"
            android:layout_width="35dp"
            android:background="@drawable/btn_sign"
            android:layout_height="35dp" />
    </LinearLayout>
</FrameLayout>
</LinearLayout>